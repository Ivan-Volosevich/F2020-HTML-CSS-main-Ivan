extends layout
    
block content
    .container
        .row
            .col
                h1 Login page
                form#login-form
                    .form-group
                        label(for='username') Name
                        input#username.form-control(type='text' name='username' placeholder='Name...')
                    .form-group
                        label(for='password') Password
                        input#password.form-control(type='password' name='password' placeholder='Password...')
                    .form-group
                        button#login-btn.btn.btn-primary Login